# Images
image/jpeg; $HOME/.config/mutt/view_attachment.sh %s jpeg /System/Applications/Preview.app
image/jpg; $HOME/.config/mutt/view_attachment.sh %s jpg /System/Applications/Preview.app
image/pjpeg; $HOME/.config/mutt/view_attachment.sh %s pjpeg /System/Applications/Preview.app
image/png; $HOME/.config/mutt/view_attachment.sh %s png /System/Applications/Preview.app
image/gif; $HOME/.config/mutt/view_attachment.sh %s gif /System/Applications/Preview.app

# PDF
application/pdf; $HOME/.config/mutt/view_attachment.sh %s pdf /System/Applications/Preview.app

